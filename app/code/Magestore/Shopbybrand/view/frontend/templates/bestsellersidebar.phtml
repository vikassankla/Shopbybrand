                    <div class="product">
                        <a href="<?php echo $_item->getProductUrl() ?>" title="<?php echo $block->escapeHtml($_item->getName()) ?>" class="product-image"><img src="<?php echo $productImage; ?>" alt="<?php echo $block->escapeHtml($_item->getName()) ?>" /></a>
                        <div class="product-details">
                            <p class="product-name"><a href="<?php echo $_item->getProductUrl() ?>"><?php echo $block->escapeHtml($_item->getName()) ?></a></p>
                        </div>
                    </div>
                </li>
                <?php endforeach ?>
            </ol>
        </div>
    </div>
<?php endif ?>
