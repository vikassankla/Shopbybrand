/** @var \Magestore\Shopbybrand\Block\Bestseller $block */
    $bestSeller = $block->getProductBestseller();
?>
<?php if(count($bestSeller)): ?>
    <div class="bestsllerbrand">
        <div class="shopbybrand-title">
            <h1><?php echo __('BestSeller Products') ?></h1>
        </div>
        <div class="brand-bestseller-content">
            <ol class="mini-products-list" id="block-related">
                <?php foreach($bestSeller as $_item): ?>
                <?php $_item = $block->getItem($_item->getProductId()) ?>
                <?php
                    $image = 'category_page_list';
                    $_imagehelper = $this->helper('Magento\Catalog\Helper\Image');
                    $productImage = $_imagehelper->init($_item, $image)->constrainOnly(FALSE)->keepAspectRatio(TRUE)->keepFrame(FALSE)->resize(60)->getUrl();
                ?>
