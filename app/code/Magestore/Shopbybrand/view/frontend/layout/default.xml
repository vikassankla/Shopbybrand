<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Magestore_Shopbybrand::css/shopbybrand/default.css"/>
        <css src="Magestore_Shopbybrand::css/shopbybrand/templates/default/shopbybrand-bootstrap.css"/>
        <css src="Magestore_Shopbybrand::css/shopbybrand/bootstrap.css"/>
        <css src="Magestore_Shopbybrand::css/shopbybrand/bootstrap.css.map"/>
        <css src="Magestore_Shopbybrand::css/shopbybrand/templates/default/sliderstyle.css"/>
        <css src="Magestore_Shopbybrand::css/shopbybrand/templates/default/default.css"/>
        <css src="Magestore_Shopbybrand::css/shopbybrand/templates/default/freaturedproductsiliderstyle.css"/>
    </head>
    <body>
        <referenceBlock name="sidebar.main">
            <block class="Magestore\Shopbybrand\Block\Sidebar" name="shopbybrand.block.sidebar" before="-"
                   template="Magestore_Shopbybrand::sidebar.phtml">
            </block>
        </referenceBlock>
        <referenceBlock name="content">
            <block class="Magestore\Shopbybrand\Block\Style" name="shopbybrand.block.style" as="shopbybrand.block.style" before="-" cacheable="false"/>
        </referenceBlock>
        <referenceBlock name="top.links">
            <block class="Magestore\Shopbybrand\Block\Link" name="shopbybrand-top-link" before="my-account-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Brands</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceBlock name="header.links">
            <block class="Magestore\Shopbybrand\Block\Link" name="shopbybrand-header-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Brands</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
